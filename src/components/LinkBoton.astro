---
const { href } = Astro.props;
---

<a
    target="_blank"
    href={href}
    role="link"
    class="rounded-full border border-white/10 flex justify-center items-center gap-x-2 py-1 px-2 lg:py-2 lg:px-4
    bg-white/10 text-white text-sm font-medium hover:bg-white/20 hover:text-white/90
    hover:scale-105 transition-transform duration-300 ease-in-out lg:text-base"
>
    <slot />
</a>